{
    "branchPrefix": {
        "separator": "",
        "validator": "",
        "prefixes": {}
    },
    "commitPrefix": {
        "separator": " ",
        "validator": "^.{1,45}$",
        "prefixes": {
            "feat:": "Feature work",
            "fix:": "Bug fix",
            "refactor:": "Refactoring",
            "test:": "Test",
            "chore:": "Chore",
            "docs:": "Documentation updated/added",
            "style:": "Code style",
            "build:": "Build",
            "ci:": "CI configuration",
            "perf:": "Performance improvement"
        }
    },
    "verboseMode": false,
    "aliases": [
        {
            "name": "start",
            "command": "gittey test; rider ./Archer.Arrow.sln"
        },
        {
            "name": "test",
            "command": "cls; gittey check && gittey cover:convert && gittey commit"
        },
        {
            "name": "check",
            "command": "dotnet-coverage collect -f xml -s ./coverage.settings.xml dotnet run --project ./Test.Scripts/"
        },
        {
            "name": "cover:convert",
            "command": "reportgenerator -reports:./output.xml -targetdir:coverage"
        },
        {
            "name": "push",
            "command": "gittey test && gittey push:unsafe"
        },
        {
            "name": "push:unsafe",
            "command": "git push"
        },
        {
            "name": "build",
            "command": "dotnet build"
        },
        {
            "name": "undo",
            "command": "git reset . && git checkout . && git clean -xfd && dotnet restore && dotnet build"
        },
        {
            "name": "pack",
            "command": "gittey test && gittey up-version && gittey push:unsafe && dotnet pack"
        },
        {
            "name": "pack:unsafe",
            "command": "gittey up-version && dotnet pack ./Lib/"
        },
        {
            "name": "up-version",
            "command": "gittey commit && \"DotVersion.exe\" --subpatch ./Lib/"
        }
    ],
    "collaborators": []
}